<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/lib_pub_dimen_margin"
    android:layout_marginTop="@dimen/lib_pub_dimen_title_height"
    android:background="@color/lib_pub_color_main"
    android:orientation="vertical"
    skin:enable="true">

    <LinearLayout
        android:id="@+id/menu_sort_name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_sort_name_check"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_common_ic_check" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_local_ic_sort_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/lib_pub_dimen_margin"
            android:text="@string/module_common_sort_by_name"
            android:textColor="@color/lib_pub_color_white"
            android:textSize="@dimen/lib_pub_dimen_text_sub" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:background="@color/lib_pub_color_line" />

    <LinearLayout
        android:id="@+id/menu_sort_time"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_sort_time_check"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_common_ic_check" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_local_ic_sort_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/lib_pub_dimen_margin"
            android:text="@string/module_common_sort_by_time"
            android:textColor="@color/lib_pub_color_white"
            android:textSize="@dimen/lib_pub_dimen_text_sub" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:background="@color/lib_pub_color_line" />

    <LinearLayout
        android:id="@+id/menu_sort_custom"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_sort_custom_check"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_common_ic_check" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_local_ic_sort_custom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/lib_pub_dimen_margin"
            android:text="@string/module_common_sort_by_custom"
            android:textColor="@color/lib_pub_color_white"
            android:textSize="@dimen/lib_pub_dimen_text_sub" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
        android:layout_marginRight="@dimen/lib_pub_dimen_margin"
        android:background="@color/lib_pub_color_line" />

    <LinearLayout
        android:id="@+id/menu_scan"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/lib_pub_dimen_margin"
            android:src="@drawable/module_local_ic_scan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/lib_pub_dimen_margin"
            android:text="@string/module_common_scan_music"
            android:textColor="@color/lib_pub_color_white"
            android:textSize="@dimen/lib_pub_dimen_text_sub" />
    </LinearLayout>
</LinearLayout>