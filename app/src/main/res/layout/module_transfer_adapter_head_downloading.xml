<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/lib_pub_color_bg_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/lib_pub_dimen_margin"
        android:paddingRight="@dimen/lib_pub_dimen_margin"
        android:text="@string/module_common_transfer_downloading"
        android:textColor="@color/lib_pub_color_text_main"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_clear_task"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/lib_pub_dimen_margin"
            android:paddingRight="@dimen/lib_pub_dimen_margin"
            android:text="@string/module_common_transfer_clear_task"
            android:textColor="@color/lib_pub_color_main"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_pause_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/lib_pub_dimen_margin"
            android:paddingRight="@dimen/lib_pub_dimen_margin"
            android:text="@string/module_common_transfer_pause_all"
            android:textColor="@color/lib_pub_color_main"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/lib_pub_color_line" />
</RelativeLayout>