<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="76dp"
    android:layout_height="87dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/module_common_corner_more"
        android:padding="10dp"
        android:src="@drawable/module_common_ic_song_delete_m" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/module_common_delete"
        android:textColor="@color/color_popup_more"
        android:textSize="@dimen/lib_pub_dimen_text_mini" />
</LinearLayout>